<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    Toolbar theme-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

<!--    Toolbar title theme-->
    <style name="ToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

<!--    TextView Editor Style-->
    <style name="TextViewEditorStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:gravity">start</item>
    </style>

<!--    EditText Editor Style-->
    <style name="EditTextEditorStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:gravity">start</item>
    </style>

<!--    RadioButton Editor Style-->
    <style name="RadioButtonEditorStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

<!--    Editor theme-->
    <style name="EditorTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/TextViewEditorStyle</item>
        <item name="editTextStyle">@style/EditTextEditorStyle</item>
        <item name="radioButtonStyle">@style/RadioButtonEditorStyle</item>
    </style>

<!--    Navigator view theme-->
    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="itemTextColor">@color/colorOnBackground</item>
        <item name="android:textColorSecondary">@color/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
    </style>
    
<!--    Hamburger style-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorOnPrimary</item>
    </style>

<!--    Drawer title style-->

</resources>
