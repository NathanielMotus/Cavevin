<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cellar_item_view_type_text"
            android:layout_width="@dimen/recyclerview_cellar_row_type_width"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cellar_item_view_photo_image"
            android:layout_alignBottom="@id/cellar_item_view_photo_image"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small"
            android:text="" />

        <ImageView
            android:id="@+id/cellar_item_view_photo_image"
            android:layout_width="@dimen/recyclerview_cellar_row_photo_width"
            android:layout_height="@dimen/recyclerview_cellar_row_photo_height"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_toEndOf="@id/cellar_item_view_type_text"
            android:src="@drawable/photo_frame" />

        <TextView
            android:id="@+id/cellar_item_view_appellation_text"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_toEndOf="@id/cellar_item_view_photo_image"
            android:gravity="left"
            android:padding="5dp"
            android:text="Côtes du Rhône"
            android:textSize="@dimen/text_big"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/cellar_item_view_buttons_linearlayout"
            android:layout_width="@dimen/recyclerview_cellar_row_buttons_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/cellar_item_view_plus_button"
                android:layout_width="@dimen/recyclerview_cellar_row_buttons_width"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="+"
                android:textSize="@dimen/text_huge" />

            <TextView
                android:id="@+id/cellar_item_view_quantity_text"
                android:layout_width="@dimen/recyclerview_cellar_row_stock_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="12"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cellar_item_view_minus_button"
                android:layout_width="@dimen/recyclerview_cellar_row_buttons_width"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="-"
                android:textSize="@dimen/text_huge" />

        </LinearLayout>

        <TextView
            android:id="@+id/cellar_item_view_vintage_text"
            android:layout_width="@dimen/recyclerview_cellar_row_vintage_width"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cellar_item_view_appellation_text"
            android:layout_toStartOf="@id/cellar_item_view_buttons_linearlayout"
            android:gravity="end"
            android:padding="@dimen/padding_small"
            android:text="2010"
            android:textSize="@dimen/text_big" />

        <TextView
            android:id="@+id/cellar_item_view_domain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cellar_item_view_appellation_text"
            android:layout_alignEnd="@id/cellar_item_view_vintage_text"
            android:gravity="end"
            android:padding="@dimen/padding_small"
            android:text="Château Comme C'est Bon"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/cellar_item_view_cuvee_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cellar_item_view_domain_text"
            android:layout_alignEnd="@id/cellar_item_view_vintage_text"
            android:gravity="end"
            android:padding="@dimen/padding_small"
            android:text="Cuvée la Meilleure"
            android:textSize="@dimen/text_normal"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cellar_item_view_bottle_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cellar_item_view_cuvee_text"
            android:layout_alignStart="@id/cellar_item_view_appellation_text"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="Nabuchodonosor"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/cellar_item_view_capacity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cellar_item_view_bottle_name_text"
            android:layout_toEndOf="@id/cellar_item_view_bottle_name_text"
            android:gravity="left"
            android:padding="@dimen/padding_small"
            android:text="0.75 L"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/cellar_item_view_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/cellar_item_view_bottle_name_text"
            android:layout_toLeftOf="@id/cellar_item_view_buttons_linearlayout"
            android:padding="@dimen/padding_small"
            android:text="5"
            android:textSize="@dimen/text_small" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>